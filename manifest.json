{
    "manifest_version": 3,
    "name": "Chat Transcript Tool",
    "version": "1.0",
    "description": "A simple Chrome extension to generate chat transcripts from ChatGPT conversations",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/default_icon.png"
    },
    "icons": {
        "16":"images/default_icon.png",
        "32":"images/default_icon.png",
        "48":"images/default_icon.png",
        "128":"images/default_icon.png"
        
    },
    "content_scripts": [
      {
        "matches": [
            "https://developer.chrome.com/docs/extensions/*",
            "https://developer.chrome.com/docs/webstore/*",
            "http://*/*", 
            "https://*/*"
        ],
        "js": ["scripts/content.js"]
      }
    ],
    "permissions": [
      "scripting",
      "activeTab"
    ]
    
  }